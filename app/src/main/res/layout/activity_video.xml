<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="计算机组成原理（唐朔飞）"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="17sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_play_first"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="播放"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_first_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="王道计算机组成原理"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="17sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_play_second"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="播放"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_first_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"/>



    <LinearLayout
        android:id="@+id/ll_teachplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="【麻省理工学院-中文字幕版】"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="17sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_play_third"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="播放"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_first_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"/>

</LinearLayout>