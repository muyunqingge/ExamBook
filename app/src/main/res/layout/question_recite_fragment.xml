<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.QuestionRecite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBBlue"
            android:gravity="center"
            android:layout_margin="10dp"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一道题目，这是一道题目，这是一道题目，这是一道题目"
            android:textColor="@color/colorBlack"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

<!--    <ImageView-->
<!--        android:id="@+id/iv_question_subject"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"-->
<!--        android:adjustViewBounds="true"-->
<!--        android:background="@drawable/touxiang"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:layout_marginRight="20dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/bt_a"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_choice"
            android:text="A"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="选项A"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/bt_b"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_choice"
            android:text="B"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="选项B"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/bt_c"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_choice"
            android:text="C"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="选项C"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/bt_d"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_width"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_choice"
            android:text="D"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="选项D"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shape_linearlayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案： A"
            android:textColor="@color/colorLightgrey"
            android:textSize="17sp"
            android:padding="10dp"
            android:gravity="left"/>


    </LinearLayout>

</LinearLayout>