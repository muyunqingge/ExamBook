<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAliceblue">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/touxiang"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/arc_linearlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:hint="请输入学号"
            android:textSize="17sp"
            android:maxLength="11"
            android:background="@null"
            android:inputType="number"
            android:padding="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLightgrey"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@null"
                android:hint="请输入登陆密码"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_verification"
                android:layout_width="60sp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/et_password"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_first_selector"
                android:text="获取验证码"
                android:textColor="@color/colorLightblue"
                android:textSize="10sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="验证码登录"
            android:textColor="@color/colorBBlue"
            android:textStyle="bold"
            android:textSize="13sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_marginLeft="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="找回密码"
            android:textColor="@color/colorBBlue"
            android:textStyle="bold"
            android:textSize="13sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_first_selector"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="新用户注册"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/colorBBlue"/>


</LinearLayout>