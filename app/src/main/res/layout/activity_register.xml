<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/colorAliceblue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/welcome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义头像"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="学校："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="学院："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="专业："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="班级："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="学号："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="姓名："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="密码："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="确认密码："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="手机号："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="验证码："
                android:textSize="17sp"
                android:gravity="center"
                android:layout_gravity="right"
                android:visibility="visible"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_school"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入学校名字"
                android:maxLength="20"
                android:inputType="text"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_college"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入学院名字"
                android:maxLength="20"
                android:inputType="text"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_major"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入专业名字"
                android:maxLength="20"
                android:inputType="text"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_grade"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入班级"
                android:maxLength="20"
                android:inputType="text"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_student_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入学号"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_student_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入姓名"
                android:inputType="text"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="请确认密码"
                android:inputType="textPassword"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="11"
                android:hint="请输入手机号"
                android:background="@drawable/edit_selector"
                android:paddingLeft="6dp"
                android:paddingStart="6dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/et_verification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:hint="请输入验证码:"
                    android:textSize="17sp"
                    android:maxLength="6"
                    android:inputType="numberPassword"
                    android:background="@drawable/edit_selector"
                    android:paddingLeft="6dp"
                    android:paddingStart="6dp"
                    android:visibility="visible"/>
                <Button
                    android:id="@+id/btn_verification"
                    android:layout_width="60sp"
                    android:layout_height="25dp"
                    android:text="获取验证码"
                    android:textSize="10sp"
                    android:background="@drawable/btn_first_selector"
                    android:textColor="@color/colorLightblue"
                    android:visibility="visible"
                    android:layout_gravity="right|center"
                    android:gravity="center"
                    />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="确认"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_radius_selector"
        android:layout_margin="40dp"
        />






</LinearLayout>