<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyncActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_fanhui"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/if_fanhui"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步数据"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/if_fsuxxx"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新同步时间"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_yue_ri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月03日"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv"
            app:layout_constraintBottom_toBottomOf="@id/iv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:36"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/iv"
            app:layout_constraintRight_toRightOf="@id/iv"
            app:layout_constraintTop_toTopOf="@id/iv"
            android:layout_marginTop="130dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前更新为：某某某课程"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_sync_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_first_selector"
        android:text="立即同步"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的收藏"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_my_favority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="0 题"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的错题"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_my_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="14 题"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未做题"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_no_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="1784 题"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="考试记录"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_my_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="1 次"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:gravity="left"/>
    </LinearLayout>

</LinearLayout>