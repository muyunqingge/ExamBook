<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeachMaterialsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ppt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="教学PPT"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="17sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/btn_down_ppt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="下载"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_first_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"
        />


    <LinearLayout
        android:id="@+id/ll_outline"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="教学大纲"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_down_outline"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_first_selector"
            android:text="下载"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"
        android:visibility="invisible"/>



    <LinearLayout
        android:id="@+id/ll_teachplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="教         案"
            android:maxLines="1"
            android:layout_gravity="center|left"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="17sp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_down_teachplan"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="下载"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_first_selector"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorLightgrey"
        android:visibility="invisible"/>

</LinearLayout>